<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.er.erproject.modele.VueInventaire" table="vueinventaire">
        <meta attribute="class-description">
            This class contains the categorie detail.
        </meta>
        <id name="id" type="int" column="id">
            <generator class="increment"/>
        </id>
        <property name="idArticle" column="id_article" type="int"/>
        <property name="idUnite" column="id_unite" type="int"/>
        <property name="nombre" column="nombre" type="double"/>
        <property name="valeur" column="valeur" type="double"/>                 
        <property name = "article" column="article" type="string"/>
        <property name = "unite" column="unite" type="string"/>
        <property name = "code" column="code" type="string"/>
        <property name = "famille" column="famille" type="string"/>
        <property name = "emplacement" column="emplacement" type="string"/>
    </class>
</hibernate-mapping>